{
    "compilerOptions": {
      "moduleResolution": "node", // Use Node.js resolution for modules
      "module": "commonjs", // Use CommonJS module system
      "target": "es2022", // Target ECMAScript 2022
      "types": [
        "node",
        "@wdio/globals/types",
        "expect-webdriverio",
        "@wdio/mocha-framework"
      ], // Include necessary type declarations
      "skipLibCheck": true, // Skip type checking of declaration files
      "strict": true, // Enable strict type checking
      "esModuleInterop": true, // Enable ES Module Interop
      "outDir": "./dist", // Output directory for compiled files
      "noUnusedLocals": true, // Report unused local variables
      "noUnusedParameters": true, // Report unused parameters
      "noFallthroughCasesInSwitch": true // Report fallthrough cases in switch statements
    },
    "include": [
      "src", // Include source files for compilation
      "./test/**/*.ts" // Include test files for compilation
    ],
    "exclude": [
      "node_modules" // Exclude node_modules from compilation
    ]
  }
